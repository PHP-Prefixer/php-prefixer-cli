{
  "name": "project/mock",
  "description": "The Project Mockup for Testing.",
  "keywords": [
    "php-prefixer"
  ],
  "license": "MIT",
  "type": "project",

  "comment-for-value-testing": {
    "illuminate/support": "^5.8"
  },

  "require": {
    "danielstjules/stringy": "^3.1",
    "league/uri": "^5.3",
    "vlucas/phpdotenv": "^3.3",
    "illuminate/support": "^5.8",
    "simplepie/simplepie": "^1.5",
    "vanilla/htmlawed": "v2.2.4.1"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.7"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "Just\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "php-prefixer": {
      "projectName": "Prefixer Test",
      "prefixForNamespaces": "XTP_BUILD",
      "prefixForGlobalObjects": "XTP_",
      "disclaimer": false,

      "case-1": "includeLibrariesDependiencies: Process additional dependencies",
      "includeLibrariesDependiencies": {
        "illuminate": [
          "psr"
        ],
        "nesbot": [
          "illuminate"
        ],
        "php-http": [
          "guzzlehttp"
        ],
        "psr": [
          "guzzlehttp"
        ],
        "symfony": [
          "psr"
        ]
      },

      "case-2": "ignorePaths: Do not prefix.",
      "ignorePaths": [
        "TestCase.php"
      ],

      "case-3": "ignoreLibraries: Do not prefix.",
      "ignoreLibraries": [
        "symfony/polyfill-ctype",
        "symfony/polyfill-mbstring"
      ],

      "case-4": "ignoreGlobalObjects: Do not prefix.",
      "ignoreGlobalObjects": [
        "JsonSerializable",
        "Carbon"
      ],

      "case-5": "excludeFromClassmap: Libraries to be removed, but keep dependecies consistent (Platform Lib).",
      "excludeFromClassmap": [
        "league/uri-manipulations",
        "vlucas/phpdotenv"
      ],

      "case-6": "excludePaths: Files to be removed from the prefixer output.",
      "excludePaths": [
        "tests/Unit",
        "league/uri-manipulations/tests",
        "league/uri-schemes/benchmark",
        "phpoption/phpoption/tests"
      ],

      "case-7": "includeExtraSourcePaths: Process additional project directories",
      "includeExtraSourcePaths": [
        "./one-more/source-path"
      ]
    }
  }
}
